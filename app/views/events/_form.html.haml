= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :date
    %br/
    = f.date_select :date
  .field
    = f.label :start_time
    %br/
    = f.time_select :start_time
  .field
    = f.label :end_time
    %br/
    = f.time_select :end_time
  .field
    = f.label :address
    %br/
    = f.text_field :address
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :state
    %br/
    = f.text_field :state
  .field
    = f.label :desc
    %br/
    = f.text_area :desc
  .actions
    = f.submit
